<div class="container">
    <h1>Admin Dashboard</h1>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% posts.forEach(p=> { %>
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="https://mdbootstrap.com/img/new/avatars/8.jpg" alt=""
                                style="width: 45px; height: 45px" class="rounded-circle" />

                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-1 text-dark">
                            <%= p.title %>
                        </p>
                    </td>
                    <td>
                        <a href="/admin/edit/<%=p._id%>" class="btn btn-link btn-sm btn-rounded text-dark bg-tertiary">
                            Edit
                        </a>
                        <a href="/admin/delete/<%=p._id%>"
                            class="btn btn-link btn-sm btn-rounded text-danger bg-tertiary">
                            Delete
                        </a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>